<p style="margin-top: 100px"></p>

<!--Shadowed container that holds the login form-->
<div class="container-fluid shadow-lg p-4 w-50 h-50 my-auto mx-auto" style="max-width: 500px; background-color: #131516; color: #d8d4cf">
  <form id="login" action="/login" method="POST" class="container needs-validation w-75" style="max-width: 500px; margin-top: 20%">
    <!--Username form-group, required-->
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" class="form-control" require id="username" required name="username" style="background-color: #131516; color: #d8d4cf">
    </div>
    <p></p>
    <!--Password form group, also required-->
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" required name="password" style="background-color: #131516; color: #d8d4cf"> 
    </div>
    <p></p>
      <!--Submit button, still inside form-->
      <button type="submit" class="btn btn-primary">Login</button> 
      <script>
        // username entered into login form
        var username = document.getElementById("username");
        var form = document.getElementById("login");

        // listens for the submit, could also use onClick function
        form.addEventListener("submit", (e) => {
          //stores the value of the username into a cookie, this is to identify the user throughout the app
          document.cookie = username.value;
        })
      </script>
  </form>
  <div class="container-fluid" style="margin-left: 10%; margin-top: 50px;">
    <p class="alert alert-danger" id="fail" style="display: none;">
      <strong>Failure:</strong> Incorrect login, please try again.
    </p>
    <script>
      // upon failure to sign in, the user is displayed a banner, fail is passed from index.js
      var fail = "<%= fail %>"
      if(fail == "false") {
        document.getElementById('fail').style.display = "inline";
      }
    </script>
  </div>
</div> 
<p></p>
